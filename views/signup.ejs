<link rel="stylesheet" href="/css/signup.css">
<form action="/user/signup" method="post"> 
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter Name" name="name" required>
      </div>
      <br>
      <% if (err==undefined) {%>
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" placeholder="Enter email" name="email" required>
      <small id="emailHelp" class="form-text text-muted">We never share your email!</small>
    </div>
    <%} else {%>
      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" placeholder="Enter email" name="email" required style="border:1px solid red;">
        <small id="emailHelp" class="form-text text-muted" style="color: red;"><%=err%></small>
      </div>
      <%}%>
    <br>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" placeholder="Password" name="password" required>
    </div>
    <br>
    <div class="form-group">
      <label for="role" class="form-label">Role</label>
                <select name="role" id="role" class="form-control" required>
                  <option value="Employee">Employee</option>
                  <option value="Admin">Admin</option>
                </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>